---
import Layout from '../../layouts/Layout.astro';
import { FAKE_COMPANIES } from '../../data/fakeData';
---

<Layout title="JobHub - Empresas">
  <div class="container mx-auto p-4">
    <h1 class="text-3xl font-bold mb-6">Empresas Registradas</h1>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      {FAKE_COMPANIES.map((company) => (
        <div class="bg-gray-800 rounded-lg shadow-md overflow-hidden transition-transform transform hover:scale-105">
          <div class="p-4">
            <h3 class="text-lg font-semibold text-white">{company.name}</h3>
            <p class="text-sm text-gray-400">{company.industry} - {company.location}</p>
          </div>
          <div class="p-4 border-t border-gray-700">
            <p class="text-sm text-gray-300">{company.description}</p>
            <p class="mt-2 text-sm text-gray-400">Ofertas de empleo: {company.jobs.length}</p>
            <a 
              href={`/companies/${company.id}`} 
              class="mt-4 inline-block bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded"
            >
              Ver Perfil
            </a>
          </div>
        </div>
      ))}
    </div>
  </div>
</Layout>