---
import Welcome from '../components/Welcome.astro';
import Layout from '../layouts/Layout.astro';
import { FAKE_JOBS, FAKE_COMPANIES } from '../data/fakeData';
import { JobCard } from '../components/JobCard';
---

<Layout title="JobHub - Plataforma de Empleo">
  <div class="container mx-auto p-4">
    <h1 class="text-3xl font-bold mb-6 text-center">
      <span class="inline-block mr-2 text-blue-500">üß≥</span>
      Bienvenido a JobHub
    </h1>
    <p class="text-lg text-gray-700 dark:text-gray-300 text-center mb-8">
      Conecta con las mejores oportunidades laborales.
    </p>

    <section class="mb-8">
      <h2 class="text-2xl font-semibold mb-4">
        <span class="inline-block mr-2 text-green-500">üîç</span>
        Ofertas de Empleo Destacadas
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        {FAKE_JOBS.slice(0, 3).map((job) => (
          <div class="bg-gray-800 rounded-lg shadow-md overflow-hidden">
            <div class="p-4">
              <h3 class="text-lg font-semibold text-white">{job.title}</h3>
              <p class="text-sm text-gray-400">{job.company} - {job.location}</p>
              <!-- Eliminamos la secci√≥n de etiquetas que estaba causando el error -->
            </div>
            <div class="p-4 border-t border-gray-700">
              <p class="text-sm text-gray-300">{job.description.substring(0, 80)}...</p>
              <a 
                href={`/jobs/${job.id}`}
                class="mt-4 inline-block bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded"
              >
                Ver Detalles
              </a>
            </div>
          </div>
        ))}
      </div>
      <div class="mt-6 text-center">
        <a href="/jobs" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded">
          Ver todas las ofertas
        </a>
      </div>
    </section>

    <section>
      <h2 class="text-2xl font-semibold mb-4">
        <span class="inline-block mr-2 text-purple-500">üë•</span>
        Empresas Destacadas
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        {FAKE_COMPANIES.slice(0, 3).map((company) => (
          <div class="bg-gray-800 rounded-lg shadow-md overflow-hidden transition-transform transform hover:scale-105">
            <div class="p-4">
              <h3 class="text-lg font-semibold text-white">{company.name}</h3>
              <p class="text-sm text-gray-400">{company.industry}</p>
            </div>
            <div class="p-4 border-t border-gray-700">
              <p class="text-sm text-gray-300">{company.description.substring(0, 80)}...</p>
              <a 
                href={`/companies/${company.id}`}
                class="mt-4 inline-block bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded"
              >
                Ver Perfil
              </a>
            </div>
          </div>
        ))}
      </div>
      <div class="mt-6 text-center">
        <a href="/companies" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded">
          Ver todas las empresas
        </a>
      </div>
    </section>
  </div>
</Layout>
